# =============================================================================
# DATA SCIENCE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Google Cloud Platform
# -----------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# -----------------------------------------------------------------------------
# BigQuery Datasets
# -----------------------------------------------------------------------------
# Source data (from data_engineering pipeline)
BIGQUERY_RAW_DATASET=blockchain_raw
BIGQUERY_ANALYTICS_DATASET=blockchain_analytics

# ML output dataset
BIGQUERY_ML_DATASET=blockchain_ml

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Random seed for reproducibility
RANDOM_SEED=42

# Model type: isolation_forest, lof, dbscan, ensemble
MODEL_TYPE=ensemble

# Anomaly contamination (expected % of fraudulent wallets)
CONTAMINATION=0.1

# -----------------------------------------------------------------------------
# Feature Engineering
# -----------------------------------------------------------------------------
# Minimum transactions required for a wallet to be included
MIN_TRANSACTIONS=2

# Feature scaling method: standard, minmax, robust
SCALING_METHOD=standard

# -----------------------------------------------------------------------------
# Pipeline Settings
# -----------------------------------------------------------------------------
# Batch size for BigQuery operations
BATCH_SIZE=10000

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Save models to disk
SAVE_MODEL=true
MODEL_PATH=models/

